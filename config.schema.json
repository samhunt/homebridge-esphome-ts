{
    "pluginAlias": "esphome",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "devices": {
                "title": "Devices",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "host": {
                            "name": "Host",
                            "type": "string"
                        },
                        "port": {
                            "name": "Port",
                            "type": "number",
                            "required": false,
                            "default": 6053
                        },
                        "password": {
                            "name": "Password",
                            "type": "string",
                            "required": false
                        },
                        "encryptionKey": {
                            "name": "Encyption Key",
                            "type": "string",
                            "required": false
                        },
                        "excludedNames": {
                            "name": "Excluded Names",
                            "type": "array",
                            "required": false,
                            "items": {
                                "type": "string"
                            }
                        },
                        "excludedTypes": {
                            "name": "Excluded Types",
                            "type": "array",
                            "required": false,
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "debug": {
                "title": "Debug",
                "type": "boolean",
                "required": false
            },
            "discover": {
                "title": "Discover devices",
                "type": "boolean",
                "required": false
            },
            "discoveryTimeout": {
                "title": "Discovery timeout",
                "type": "integer",
                "minimum": 0,
                "required": false
            },
            "co2Threshold": {
                "title": "Carbon Dioxide (CO2) Alert Level Threshold",
                "type": "integer",
                "minimum": 400,
                "required": false
            },
            "coThreshold": {
                "title": "Carbon Monoxide Alert Level Threshold",
                "type": "integer",
                "minimum": 0,
                "required": false
            }
        }
    },
    "form": [
        {
            "type": "section",
            "expandable": true,
            "expanded": true,
            "title": "Devices",
            "items": [
                {
                    "key": "devices",
                    "items": [
                        "devices[].host",
                        "devices[].port",
                        "devices[].password",
                        "devices[].encryptionKey",
                        {
                            "key": "devices[].excludedTypes",
                            "type": "section",
                            "expandable": true,
                            "expanded": true,
                            "title": "Excluded Types",
                            "items": [
                                "devices[].excludedTypes[]"
                            ]
                        },
                        {
                            "key": "devices[].excludedNames",
                            "type": "section",
                            "expandable": true,
                            "expanded": true,
                            "title": "Excluded Names",
                            "items": [
                                "devices[].excludedNames[]"
                            ]
                        }
                    ]
                }
            ]
        },
        "debug",
        "discover",
        "coThreshold",
        "co2Threshold"
    ]
}
