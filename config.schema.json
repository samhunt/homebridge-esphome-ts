{
    "pluginAlias": "esphome",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "devices": {
                "title": "Devices",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "host": {
                            "name": "Host",
                            "type": "string"
                        },
                        "port": {
                            "name": "Port",
                            "type": "number",
                            "required": false,
                            "default": 6053
                        },
                        "password": {
                            "name": "Password",
                            "type": "string",
                            "required": false
                        },
                        "encryptionKey": {
                            "name": "Encyption Key",
                            "type": "string",
                            "required": false
                        }
                    }
                }
            },
            "debug": {
                "title": "Debug",
                "type": "boolean",
                "required": false
            },
            "discover": {
                "title": "Discover devices",
                "type": "boolean",
                "required": false
            },
            "discoveryTimeout": {
                "title": "Discovery timeout",
                "type": "integer",
                "minimum": 0,
                "required": false
            }
        }
    },
    "form": [
        {
            "type": "section",
            "expandable": true,
            "expanded": true,
            "title": "Devices",
            "items": [
                {
                    "key": "devices",
                    "items": [
                        "devices[].host",
                        "devices[].port",
                        "devices[].password",
                        "devices[].encryptionKey"
                    ]
                }
            ]
        },
        "debug",
        "discover"
    ]
}
